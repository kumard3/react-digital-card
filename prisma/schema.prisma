model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  profile       Profile?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Profile {
  id        String  @id @default(cuid())
  name      String
  email     String  @unique
  bio       String
  slug      String  @unique
  phone     String?
  twitter   String?
  instagram String?
  facebook  String?
  userId    String  @unique
  user      User    @relation(fields: [userId], references: [id])
}
